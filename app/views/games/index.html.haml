.container-fluid.col-md-9.translucent
  .h3 Games

  =link_to("Add game", new_team_game_url)

  %table.table
    -@team.games.each do |game|
      %tr
        %td= link_to(game.name, team_game_url(@team.id, game.id))
        %td= link_to('DEL', team_game_path(@team.id, game), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_game')